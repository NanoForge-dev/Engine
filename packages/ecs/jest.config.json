{
  "preset": "ts-jest",
  "moduleFileExtensions": ["js", "ts"],
  "rootDir": "test",
  "collectCoverageFrom": ["**/*.(t|j)s"],
  "testEnvironment": "node",
  "testRegex": ".*\\.spec\\.ts$",
  "transform": {
    "^.+\\.(t|j)s$": "ts-jest"
  },
  "transformIgnorePatterns": ["<rootDir>/node_modules/"],
  "verbose": true,
  "testTimeout": 5000
}
